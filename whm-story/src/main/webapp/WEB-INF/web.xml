<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="sample" version="2.5">
	<display-name>Archetype Created Web Application</display-name>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
		classpath:conf/spring/whm-impl.xml,
		classpath:conf/spring/whm-da.xml,
		classpath:conf/spring/spring-cache.xml,
		classpath:conf/spring/whm-res.xml
		</param-value>
	</context-param>
	
	<context-param>  
	     <param-name>logbackConfigLocation</param-name>  
	     <param-value>/opt/whm/whm-story/configs/logback.xml</param-value>
	 </context-param>  
	
	<filter>
		<filter-name>CharacterEncodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>utf-8</param-value>
		</init-param>
		<init-param>
			<param-name>forceEncoding</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>CharacterEncodingFilter</filter-name>
		<servlet-name>whm-story</servlet-name>
	</filter-mapping>
	<filter>
		<filter-name>ProcessTimeFilter</filter-name>
		<filter-class>com.summer.whm.web.common.utils.ProcessTimeFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>ProcessTimeFilter</filter-name>
		<servlet-name>whm-story</servlet-name>
	</filter-mapping>
	
	<filter>
		<filter-name>SecurityFilter</filter-name>
		<filter-class>com.summer.whm.web.common.filter.SecurityFilter</filter-class>
		<init-param>
			<param-name>isIdentCode</param-name>
			<param-value>false</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>SecurityFilter</filter-name>
		<servlet-name>whm-story</servlet-name>
	</filter-mapping> 

	<filter>
		<filter-name>CacheFilter</filter-name>
		<filter-class>com.summer.whm.web.common.filter.CacheFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>CacheFilter</filter-name>
		<servlet-name>whm-story</servlet-name>
	</filter-mapping>

	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<listener>  
	     <listener-class>  
	         com.summer.whm.web.common.listener.LogbackConfigListener  
	     </listener-class>
	 </listener>
	<servlet>
		<servlet-name>whm-story</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>classpath:conf/spring/whm-story-servlet.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>whm-story</servlet-name>
		<url-pattern>*.htm</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>whm-story</servlet-name>
		<url-pattern>*.html</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>whm-story-xml</servlet-name>
		<servlet-class>com.summer.whm.web.servlet.xml.XMLServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>whm-story-xml</servlet-name>
		<url-pattern>*.xml</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>whm-story-image</servlet-name>
		<servlet-class>com.summer.whm.web.servlet.image.ImageServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>whm-story-image</servlet-name>
		<url-pattern>/images/*</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	<error-page>
		<exception-type>java.lang.Throwable</exception-type>
		<location>/error/500.html</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/error/500.html</location>
	</error-page>
	<error-page>
		<error-code>404</error-code>
		<location>/error/404.html</location>
	</error-page>
	<error-page>
		<error-code>403</error-code>
		<location>/error/500.html</location>
	</error-page>
	<error-page>
		<error-code>400</error-code>
		<location>/error/400.html</location>
	</error-page>
</web-app>